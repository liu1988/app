
.register {
	width: 600rpx;
	margin: 0 auto;
}
.register_Title {
	text-align: center;
	font-size: 23px;
	margin: 30px 0 25px 0;
}
.register-button {
	margin-bottom: 20px;
}
.register-text {
	letter-spacing: 1px;
	font-size: 28px;
	line-height: 30px;
}
.input-phone {
	height: 30px;
	border-bottom: 1px solid #ccc;
	margin-bottom: 15px;
}
.dialog_yzm {
	width: 450rpx;
	height: 33px;
	border-bottom: 1px solid #ccc;
	float: left;
}
.phone_index_hm {
	margin-right: 3px;
}
.phone_index {
	float: left;
	font-size: 14px;
}
.phone_number_index {
	font-size: 14px;
}
.phone_number {
	float: left;
	margin-left: 15px;
}
.dialog-bd {
	height: 25px;
}
.code-view {
	height: 25px;
	display: block;
	text-align: center;
}
.code-item {
	float: left;
	margin-right: 10px;
	border-bottom: 1px solid #1726cc;
	/* #ccc */
	width: 35px;
	height: 25px;
	font-size: 16px;
}
.phone_number_yanzheng {
	text-align: left;
	font-size: 14px;
}
.register-Password {
	overflow: hidden;
	margin-top: 20px;
}
.Password-text {
	color: #398ce6;
	float: left;
	font-size: 14px;
}
.Password-Tourist {
	color: #398ce6;
	float: right;
	font-size: 14px;
}
.login_btn {

	margin: 0 auto;
	margin-top: 25px;
}
.btn_text {
	width: 280px;
	height: 36px;
	font-size: 16px;
	background: #fc6ea2;
	color: #FFF;
	line-height: 36px;
	display: block;
	border-radius: 5px;
	-webkit-box-shadow: 0px 1px 1px #d8d8d8;
	        box-shadow: 0px 1px 1px #d8d8d8;
}
.btn_text[disabled] {
	background: #f98ab3;
	color: #fff;
}
.btn_text_ai {
	background: #e85088;
}
.dialog_yzm_index {
	width: 450rpx;
	font-size: 14px;
}
.dialog_yzm_text {
	display: block;
	width: 120rpx;
	height: 34px;
	background-color: #4ec2ff;
	font-size: 12px;
	text-align: center;
	line-height: 34px;
	float: right;
	color: #fff;
	padding: 0;
}
.btn_text_hq{
	background: #3eabe4;
}

